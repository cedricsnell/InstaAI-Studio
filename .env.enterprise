# ===========================================
# INSTAAI STUDIO - ENTERPRISE CONFIGURATION
# ===========================================
# Copy to .env and update with your credentials

# Application
ENVIRONMENT=production
API_BASE_URL=https://api.instaai.com
FRONTEND_URL=https://app.instaai.com
SECRET_KEY=change-this-to-random-64-char-string

# Database (Supabase)
DATABASE_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# Redis (Upstash)
REDIS_URL=rediss://default:password@xxx.upstash.io:6379

# Storage (Cloudflare R2)
STORAGE_PROVIDER=r2
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=instaai-storage
R2_PUBLIC_URL=https://storage.instaai.com

# Celery
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Instagram API
INSTAGRAM_APP_ID=your-facebook-app-id
INSTAGRAM_APP_SECRET=your-facebook-app-secret

# AI Services
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx

# Monitoring
SENTRY_DSN=https://xxx@sentry.io/xxx

